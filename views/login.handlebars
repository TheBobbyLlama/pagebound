<div class="grid-container">
    <div class="grid-x grid-margin-x align-center align-middle" style="height: 90vh;">
        <div class="cell small-12 large-6 card" style="margin-top: 1rem;">
            <div class="card-divider">Sign in to Your Account</div>
            <div class="card-section">
                <div class="callout alert hide" id="credential-alert">
                    <p>Incorrect email or password.</p>
                </div>
                <div class="callout alert hide" id="verify-alert">
                    <p>You must verify your email address before you can log in.</p>
                </div>
                <form id="login-form">
                    <div class="small-12 cell">
                        <label>Email
                            <input type="email" placeholder="example@user.com" id="username-login">
                        </label>
                    </div>
                    <div class="small-12 cell">
                        <label>Password
                            <input type="password" id="password-login">
                        </label>
                    </div>
                    <div class="flex-container align-middle">
                        <button type="submit" class="button" style="margin-right: 5px;">Login!</button>
                        <p>or <a href="/signup">Sign Up!</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/javascript/login.js"></script>