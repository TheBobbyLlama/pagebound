<div id="dashboard-container" class="grid-container">
    <div class="grid-x align-center">
        <div class="cell small-12">
            <ul class="dropdown menu dashboard-menu flex-container align-justify" data-dropdown-menu>    
                <div class="dropdown menu flex-container" data-dropdown-menu>
                    <li style="position: relative; top: -3px;"><a href="/inbox"><i class="foundicon-mail"></i><span class="show-for-medium">&emsp;Messages</span></a></li>
                    <li><a href="/club-search" class="button"><i class="fi-list foundicon-location"></i><span class="show-for-medium">&emsp;Find Clubs Near Me</span></a></li>
                    <li><a href="/create-club" class="button"><i class="fi-list foundicon-plus"></i><span class="show-for-medium">&emsp;Create a Club</span></a></li>
                </div>
                <li><a href="/change-user-settings" class="button"><i class="fi-list foundicon-settings"></i><span class="show-for-medium"></span></a></li>
            </ul>
        </div>
    </div>
</div>
<div class="grid-container">
    <div class="grid-x grid-margin-x align-center">
        <div class="cell small-12 large-6 card" style="margin-top: 2rem;">
            <div class="card-divider">Message {{user.username}}</div>
            <div class="card-section">
                <form id="login-form">
                    <div class="small-12 cell">
                        <label>Subject
                            <input type="text" id="message-subject">
                        </label>
                    </div>
                    <div class="small-12 cell">
                        <label>
                            <textarea id="message-body" style="height: 20vh;"></textarea>
                        </label>
                    </div>
                    <div class="flex-container align-middle">
                        <button type="submit" class="button" style="margin-right: 5px;" id="send-message">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="/javascript/message-user.js"></script>