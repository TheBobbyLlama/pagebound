<div class="grid-container">
    <div class="grid-x grid-margin-x align-center">
		<div class="cell small-12 large-10 card" style="margin-top: 1rem;" data-id="{{book_id}}">
			<div class="card-divider">
				New Discussion for&nbsp;<span></span>
			</div>
			<div class="card-section grid-x grid-margin-x">
				<div class="cell small-3" style="padding-top: 20px;">
					<div id="cover_panel"  class="cell small-6 large-3">
					</div>
				</div>
				<div class="cell small-9">
					<form id="new-discussion-form" data-club-id="{{club_id}}" data-book-id="{{book_id}}">
						<p>
							<label for="new-title">Title:</label>
							<input type="text" id="new-title" maxlength="255"></input>
						</p>
						<p>
							<textarea id="new-body"></textarea>
						</p>
						<p class="squish-together">
							<button type="submit" class="button">Submit</button>
							<button type="button" class="button" onclick="window.location.assign('/club/{{club_id}}')">Cancel</button>
						</p>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
