<div class="grid-container">
    <div class="grid-x grid-margin-x align-center">
        <div class="cell small-12 large-6 card" style="margin-top: 10rem;">
            <div class="card-divider">Create a New Book Club</div>
            <div class="card-section">
                <div class="callout alert hide" id="name-blank-alert">
                    <p>Club name already taken.</p>
                </div>
                <div class="callout alert hide" id="name-taken-alert">
                    <p>Club name already taken.</p>
                </div>
                <!-- create club form -->
                <form id="create-club-form">
                    <div class="small-12 cell">
                        <label>Club Name
                            <input type="text" id="add-club-name" autocomplete="off">
                        </label>
                    </div>
                    <div class="small-12 cell" id="add-club-user">
                        <label>Add Users <small>(Optional)</small>
                            <input type="text" placeholder="Username" id="add-club-user-input" data-toggle="add-user-dropdown" style="position: relative;" autocomplete="off">
                            <div class="dropdown-pane hide grid-x" id="add-user-dropdown" style="width: 50vw; justify-self: stretch;" data-dropdown data-close-on-click="true">
                                <ul class="cell-12 list-group" id="add-user-dropdown-list" style="padding: none;"></ul>
                            </div>
                        </label>
                    </div>
                    <!-- add book modal -->
                    <div class="reveal" id="add-book-modal" data-reveal>
                        <div class="grid-container" style="max-height: 70vh;">
                            <div class="flex-container" style="margin-right: 1rem;">
                                <select id="book-add-select" style="flex-basis: 20%">
                                    <option value="title">Title</option>
                                    <option value="author">Author</option>
                                </select>   
                                <input type="search" placeholder="Search" id="book-add-input" style="flex-basis: 80%" autocomplete="off">
                            </div>
                            <!-- loading gif -->
                            <div class="flex-container align-center hide" id="book-add-loading-gif">
                                <img src="https://faviconer.net/preloaders/833/Full%20snake.gif" alt="">
                            </div>
                            <div class="cell medium-cell-block-y" id="book-add-results">
                                Search books by title or author.
                            </div>
                        </div>
                        <button class="close-button" data-close aria-label="Close modal" type="button">
                                <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div>
                        <ul class="list-group hide" id="selected-user-list">
                        </ul>
                    </div>
                    <!-- this is where the chosen book displays -->
                    <div>
                        <div id="add-club-book" style="display: block; position: relative; width: 200px">
                        </div>
                        <a href="#" class="flex-container align-middle" data-open='add-book-modal'>
                            <i id="add-a-book-plus-sign" class="foundicon-plus" style="font-weight: lighter; margin-right: .2rem;"></i>
                            <strong id="add-a-book-button" style="margin-left: .2rem;">Add a Book</strong>
                        </a>
                    </div>
                    <div class="small-12 cell">
                        <button type="submit" class="button expanded" style="margin-top: 1rem;">Create Club</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
