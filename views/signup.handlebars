<div class="grid-container">
    <div class="grid-x grid-margin-x align-center align-middle" style="height: 90vh;">
        <div class="cell small-6 card">
            <div class="card-divider">Sign Up as a Pagebound User</div>
            <div class="card-section">
            <div class="small-12 cell">
                <label>Email
                    <input type="text" placeholder="example@user.com" id="email-signup">
                </label>
            </div>
            <div class="small-12 cell">
                <label>Username
                    <input type="text" placeholder="thebestuser_69" id="username-signup">
                </label>
            </div>
            <div class="small-12 cell">
                <label>Zipcode
                    <input type="text" placeholder="90210" id="zipcode-signup">
                </label>
            </div>
            <div class="small-12 cell">
                <label>Password
                    <input type="password" id="password-take-one">
                </label>
            </div>
            <div class="small-12 cell">
                <label>Type Password Again
                    <input type="password" id="password-signup">
                </label>
            </div>
            <div class="flex-container align-middle">
                <button type="submit" class="button" style="margin-right: 5px;" id="signup-form">Sign Up!</button>
                <p>or <a href="/signup">Sign Up!</a></p>
            </div>
        </div>
        </div>
    </div>
</div>
<script src="/javascript/signup.js"></script>